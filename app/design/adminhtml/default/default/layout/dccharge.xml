			<action method="setTemplate"><template>dccharge/sales/order/totals.phtml</template></action>
			<block type="dccharge/sales_order_total" name="import_duty" template="dccharge/sales/order/total.phtml">
				<action method="setAfterCondition"><condition>tax</condition></action>
			</block>
			<block type="adminhtml/sales_order_totals_item" name="fee.refunded" template="dccharge/sales/order/refunded.phtml">
				<action method="setDisplayArea"><area>footer</area></action>
				<action method="setAfterCondition"><condition>last</condition></action>
